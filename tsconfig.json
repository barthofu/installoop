{
	"compilerOptions": {

		"target": "es2021",
		"module": "commonjs",
		
		"outDir": "./build",
		
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}